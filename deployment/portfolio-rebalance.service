[Unit]
Description=IBKR Portfolio Rebalancer
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
WorkingDirectory=/home/brad/cursor_code/metagross_projects/stock_portfolio
ExecStart=/usr/bin/docker compose run --rm app poetry run bot trade --paper
